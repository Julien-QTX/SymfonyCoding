{% extends 'base.html.twig' %}

{% block title %}Create Post !{% endblock %}

{% block body %}
<div class="edit-post">
    <form  method="POST">
        <div >
            <label for="title" class="block text-gray-700 text-sm font-bold mb-2">Title:</label>
            <input type="text" id="title" name="title" value="{{ title }}" class="form-control" >
        </div>
        <div class="mb-4">
            <label for="tags" class="block text-gray-700 text-sm font-bold mb-2">Tags:</label>
            <input type="text" id="tags" name="tags" value="{{ tags }}" class="form-control">
        </div>
        <div class="mb-4">
            <label for="content" class="block text-gray-700 text-sm font-bold mb-2">Content:</label>
            <textarea id="content" name="content" class="form-control">{{ content }}</textarea>
        </div>
        <button type="submit" class="btn btn-success">Update Post</button>
            

    </form>
    <form action="{{ path("app_posts_delete_controller" ,{"slug": slug}) }}" method="post">
        <button type="submit" class="btn btn-danger">Delete Post</button>
    </form>
</div>
{% endblock %}