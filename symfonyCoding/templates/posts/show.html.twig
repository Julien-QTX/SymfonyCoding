{% extends 'base.html.twig' %}

{% block body %}
<h1>{{ title }}</h1>
<p>{{ date }}</p>
<p>{{ content }}</p>
<img src="{{ image }}" alt="Article Image">

{% if is_granted('ROLE_ADMIN') %}

<a href="/{{langue}}/posts/edit/{{slug}}"
    class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">Edit
    Post</a>

<form action="/{{langue}}/posts/delete/{{slug}}" method="post">
    <button type="submit"
        class="bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
        Delete Post
    </button>
</form>

{% endif %}

{% if is_granted('ROLE_USER') %}
<script src="{{ asset('js/download_pdf.js') }}"></script>

<a href="{{ path('download_article_pdf', { 'id': article_id }) }}" class="download-link">Télécharger en PDF</a>
{% endif %}
{% endblock %}