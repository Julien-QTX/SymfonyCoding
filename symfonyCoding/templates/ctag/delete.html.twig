{% extends 'base.html.twig' %}

{% block title %}Supprimer un Tag{% endblock %}

{% block body %}
    <h1>Supprimer  un Tag</h1>

    <p>Êtes-vous sûr de vouloir supprimer le tag "{{ tag.name }}" ?</p>

    <form method="post" action="{{ path('app_ctag_delete', {'id': tag.id}) }}"
          onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce tag ?');">
        <input type="hidden" name="_method" value="DELETE">
        {{ csrf_token('delete' ~ tag.id) }}
        <button type="submit"> Supprimer</button>
    </form>

    <a href="{{ path('app_ctag_index') }}">Retour à la liste des Tags</a>
{% endblock %}
