<style>
    .example-wrapper {
        margin: 1em auto;
        max-width: 800px;
        width: 95%;
        font: 18px/1.5 sans-serif;
    }

    .example-wrapper code {
        background: #F5F5F5;
        padding: 2px 6px;
    }

    nav {
        background: #333;
        padding: 10px;
        text-align: center;
    }

    nav ul {
        list-style: none;
        margin: 0;
        padding: 0;
    }

    nav ul li {
        display: inline-block;
        margin-right: 10px;
    }

    nav ul li a {
        color: #FFF;
        text-decoration: none;
        padding: 5px 10px;
    }

    nav ul li a:hover {
        background: #FFF;
        color: #333;
    }

    nav ul li.current-page a {
        background: #FFF;
        color: #333;
    }
</style>

<nav>
    <ul>
        <li class="{{ home is defined and home ? 'current-page'  }}">
            <a href="/">Home</a>
        </li>
        {% if is_granted('ROLE_USER') %}
        <li class="{{ profile is defined and profile ? 'current-page' }}">
            <a href="/profile">Profile</a>
        </li>
        <li>
            <a href="/logout">Logout</a>
        </li>
        {% else %}
        <li class="{{ login is defined and login ? 'current-page' }}">
            <a href="/login">Login</a>
        </li>
        <li class="{{ register is defined and register ? 'current-page' }}">
            <a href="/register">Register</a>
        </li>
        {% endif %}
        <li class="{{ contact is defined and contact ? 'current-page' }}">
            <a href="/contact">Contact</a>
        </li>
    </ul>
</nav>